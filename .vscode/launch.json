  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run EE Tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "args": [
        "-r",
        "ts-node/register",
        "./test/test_exchange_emulator.ts"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "tsc: build - tsconfig.json",
    }
  ]
}
