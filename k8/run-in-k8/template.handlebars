apiVersion: batch/v1
kind: Job
metadata:
  labels:
    run: binance-tool
  name: "binance-tool-trade-id-{{trade_id}}"
spec:
  backoffLimit: 1
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: {{container_name}}
        image: {{docker_image}}
        command: ["node",  "service.js", "--trade-id", "{{trade_id}}"]
        env:
        - name: TELEGRAM_KEY
          valueFrom:
            secretKeyRef:
              key: TELEGRAM_KEY
              name: telegram
        - name: TELEGRAM_CHAT_ID
          valueFrom:
            secretKeyRef:
              key: TELEGRAM_CHAT_ID
              name: telegram
