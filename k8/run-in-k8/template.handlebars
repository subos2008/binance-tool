apiVersion: batch/v1
kind: Job
metadata:
  labels:
    run: binance-tool
  name: "execution-engine-trade-id-{{trade_id}}"
  annotations:
    ad.datadoghq.com/nginx.logs: '[{"source":"trade-id-{{trade_id}}","service":"execution-engine"}]'

spec:
  backoffLimit: 5
  template:
    spec:
      restartPolicy: OnFailure
      volumes:
        - hostPath:
            path: /opt/datadog-agent/run
          name: pointerdir
      containers:
      - name: {{container_name}}
        image: {{docker_image}}:latest
        command: ["./service.ts", "--trade-id", "{{trade_id}}", "--live"]
        volumeMounts:
          - name: pointerdir
            mountPath: /opt/datadog-agent/run
        env:
        - name: DD_LOGS_ENABLED
          value: "true"
        - name: DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL
          value: "true"
        - name: TELEGRAM_KEY
          valueFrom:
            secretKeyRef:
              key: TELEGRAM_KEY
              name: telegram
        - name: TELEGRAM_CHAT_ID
          valueFrom:
            secretKeyRef:
              key: TELEGRAM_CHAT_ID
              name: telegram
        - name: REDIS_HOST
          valueFrom:
            secretKeyRef:
              key: REDIS_HOST
              name: redis
        - name: REDIS_PASSWORD
          valueFrom:
            secretKeyRef:
              key: REDIS_PASSWORD
              name: redis
        - name: APIKEY
          valueFrom:
            secretKeyRef:
              key: APIKEY
              name: binance
        - name: APISECRET
          valueFrom:
            secretKeyRef:
              key: APISECRET
              name: binance
